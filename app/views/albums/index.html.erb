<h1>Listing albums</h1>

<%if @current_member%>
   <%= link_to 'New album', new_album_path, :style => "float:right" %>
<%end%>

<% for album in @albums %>
   <div class="album">
     <%if @current_member%>
       <div style="float:right">
         <%= link_to 'Edit', edit_album_path(album) %>
         <%= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %>
       </div>
     <%end%>
     
     <%= link_to image_tag(album.cover_image.image.url(:thumb))+"<span>#{album.name}</span>", album %>
   </div>
<% end %>

<%if @albums.empty?%>
   No Albums yet.
<%end%>
