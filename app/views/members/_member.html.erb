<div class="member" id="member_<%=member.id%>">
   <%if @current_member and (@current_member==member or @current_member.is_phi)%>
      <div style="float:right">
         <%if @current_member.is_phi? and @current_member!=member%>
         <%= link_to "Make phi", make_phi_member_path(member), :confirm => "Are you sure you want to hand over the presidency?", :method => :PUT %>
         <%end%>
         <%= link_to 'Edit', edit_member_path(member) %>
         <%= link_to 'Destroy', member, :method => :delete, :confirm => 'Are you sure you want to delete this member?' %>
      </div>
   <%end%>
   
   <%= link_to image_tag(member.photo ? member.photo.image.url(:thumb) : "/images/default_profilpic.gif", :style => "width:80px"), member%>
   
   
   <%= link_to member.name, member, :class => "strong" %> <br/>
   <div style="margin-left: 70px; font-weight:bold;"><%=member.position%></div>
</div>